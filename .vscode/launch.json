{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // https://github.com/microsoft/vscode-cpptools/issues/7971
        {
            "name": "Run Debug",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "launchOptionType": "Local",
            "targetArchitecture": "x64",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "gdb",
                "program": "${workspaceFolder}/bin/linux/Debug/T3DFW_DVR_project_d"
            },
            "osx": {
                "MIMode": "lldb",
                "miDebuggerPath": "lldb-mi",
                "program": "${workspaceFolder}/bin/macOS/Debug/T3DFW_DVR_project_d"
            },
            // https://code.visualstudio.com/docs/cpp/cpp-debug
            // ... GDB on Cygwin and MinGW cannot break a running process. ... 
            // https://code.visualstudio.com/docs/cpp/config-mingw
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "gdb.exe",
                "program": "${workspaceFolder}/bin/Win64/Debug_mingw/T3DFW_DVR_Project_d.exe",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": false
                    }
                ],
            },
            "preLaunchTask": "Make Debug",
            "logging": {
                "trace": false,
                "traceResponse": false,
                "engineLogging": false
            },
        },
        

        {
            "name": "Run Release",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "launchOptionType": "Local",
            "targetArchitecture": "x64",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "gdb",
                "program": "${workspaceFolder}/bin/linux/Release/T3DFW_DVR_project"
            },
            "osx": {
                "MIMode": "lldb",
                "miDebuggerPath": "lldb-mi",
                "program": "${workspaceFolder}/bin/macOS/Release/T3DFW_DVR_project"
            },
            // https://code.visualstudio.com/docs/cpp/cpp-debug
            // ... GDB on Cygwin and MinGW cannot break a running process. ... 
            // https://code.visualstudio.com/docs/cpp/config-mingw
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "gdb.exe",
                "program": "${workspaceFolder}/bin/Win64/Release_mingw/T3DFW_DVR_Project.exe",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": false
                    }
                ],
            },
            "preLaunchTask": "Make Release",
            "logging": {
                "trace": false,
                "traceResponse": false,
                "engineLogging": false
            },
        },
        
        
        {
            "name": "C Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "enter program name, for example ${workspaceRoot}/a.out",
            "processId": "${command.pickProcess}",
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        }        
    ]
}